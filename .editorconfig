# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Windows-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = crlf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true


# Indentation override for all Java
[*.{xml,java}]
indent_size = 4

# json, yml, web indentation
[*.{json,yml,js,jsx,ts,tsx,html,css,sass,scss,less}]
indent_size = 2

# markdown
[*.md]
trim_trailing_whitespace = false
indent_size = 2